# =========================
# Database
# =========================
DATABASE_URL=postgresql://username:password@localhost:5432/nom_de_la_base?schema=public

# =========================
# JWT Access Token
# =========================
JWT_SECRET=Votre_JWT_SECRET
JWT_EXPIRATION=3600

# =========================
# JWT Refresh Token
# =========================
JWT_REFRESH_SECRET=Votre_JWT_REFRESH_SECRET
JWT_REFRESH_EXPIRATION=24h

# =========================
# JWT Reset Password Token
# =========================
JWT_RESET_SECRET=Votre_JWT_RESET_SECRET
JWT_RESET_EXPIRATION=900

# =========================
# SendGrid (Email)
# =========================
SENDGRID_API_KEY=Votre_SENDGRID_API_KEY
MAIL_FROM=votre_email@example.com

# =========================
# Application
# =========================
# NODE_ENV doit être défini selon l'environnement :
#   development → pour la machine locale
#   production  → pour le serveur prod
#   test        → pour les tests automatisés
NODE_ENV=development

# PORT sur lequel l'application tourne dans cet environnement
PORT=3000

# =========================
# Sentry (Error Tracking)
# =========================
SENTRY_DSN=Votre_SENTRY_DSN

# =========================
# Throttler (Rate Limiter)
# =========================
THROTTLE_TTL=900          # secondes
THROTTLE_LIMIT=100        # nombre max de requêtes par TTL

# =========================
# Prometheus (Monitoring) - optionnel
# =========================
PROMETHEUS_PORT=9090
GRAFANA_PORT=300O
