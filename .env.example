# =========================
# Database
# =========================
DATABASE_URL=postgresql://username:password@localhost:5432/nom_de_la_base?schema=public

# =========================
# JWT Access Token (durée en secondes)
# =========================
JWT_SECRET=Votre_JWT_SECRET
JWT_EXPIRATION=3600             # 1h = 3600 secondes

# =========================
# JWT Refresh Token (durée en secondes)
# =========================
JWT_REFRESH_SECRET=Votre_JWT_REFRESH_SECRET
JWT_REFRESH_EXPIRATION=86400    # 24h = 86400 secondes

# =========================
# JWT Reset Password Token (durée en secondes)
# =========================
JWT_RESET_SECRET=Votre_JWT_RESET_SECRET
JWT_RESET_EXPIRATION=900        # 15 minutes = 900 secondes

# =========================
# JWT Verify Email Token (durée en secondes)
# =========================
JWT_VERIFY_SECRET=Votre_JWT_VERIFY_SECRET
JWT_VERIFY_EXPIRATION=86400     # 24h = 86400 secondes

# =========================
# Gmail (Email)
# =========================
MAIL_FROM="votre_email@example.com"
GMAIL_USER=votre_email@example.com
GMAIL_APP_PASSWORD=votre_mot_de_passe_app

# =========================
# Application
# =========================
# NODE_ENV doit être défini selon l'environnement :
#   development → machine locale
#   production  → serveur prod
#   test        → tests automatisés
NODE_ENV=development

# PORT sur lequel l'application tourne dans cet environnement
PORT=3000

# =========================
# Sentry (Error Tracking)
# =========================
SENTRY_DSN=Votre_SENTRY_DSN

# =========================
# Throttler (Rate Limiter)
# =========================
THROTTLE_TTL=900          # durée d'une fenêtre en secondes
THROTTLE_LIMIT=100        # nombre max de requêtes par TTL

# =========================
# Prometheus / Grafana (Monitoring) - optionnel
# =========================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
